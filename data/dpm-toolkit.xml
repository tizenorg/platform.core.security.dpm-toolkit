		<policy id="SET_MAX_NUMERIC_SEQUENCE_LENGTH" desc="Set Maximum Numeric Sequence Length" status="ON"/>
		<policy id="GET_MAX_NUMERIC_SEQUENCE_LENGTH" desc="Get Maximum Numeric Sequence Length" status="ON"/>
